<form action="/{{data._id}}?_method=PUT" method="POST">
    <input type="text" name="name" id="name" placeholder="Restaurant name" value="{{ data.name }}" /> <br />

    <input type="text" name="street" id="street" placeholder="Restaurant street" value="{{ data.address.street }}" />
    <br />

    <input type="text" name="zipcode" id="zipcode" placeholder="Restaurant Zipcode"
        value="{{ data.address.zipcode }}" /> <br />


    <input type="text" name="yelpUrl" id="yelpUrl" placeholder="Yelp Url" value="{{ data.yelpUrl }}" /> <br />


    <input type="submit" />

</form>